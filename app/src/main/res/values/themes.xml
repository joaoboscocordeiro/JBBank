<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JBBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/color_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_teal_900</item>
    </style>

    <style name="Custom.Card.View.Style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/Custom.Card.View</item>
    </style>

    <style name="Custom.Card.View" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="Theme.JBBank" parent="Base.Theme.JBBank" />

    <style name="Theme.JBBank.FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/bg_edit_background</item>
        <item name="android:textColorHint">@color/gray_text</item>
    </style>

    <style name="Theme.JBBank.Button" parent="ThemeOverlay.Material3.Button">
        <!-- Customize Button. -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">16dp</item>
        <item name="android:backgroundTint">@color/color_teal_900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Bottom.Sheet.Dialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Bottom.Sheet.Style.Wrapper</item>
    </style>

    <style name="Bottom.Sheet.Style.Wrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>