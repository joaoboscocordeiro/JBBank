<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JBBank" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_darker</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/color_teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_teal_900</item>
        <item name="android:windowBackground">@color/color_teal_900</item>
    </style>

    <style name="Theme.JBBank" parent="Base.Theme.JBBank" />

    <style name="Theme.JBBank.FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/gray_text</item>
    </style>

    <style name="Theme.JBBank.Button" parent="Widget.MaterialComponents.Button">
        <!-- Customize Button. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>